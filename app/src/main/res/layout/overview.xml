<?xml version="1.0" encoding="utf-8"?>
<dev.kobalt.callblock.view.VerticalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <dev.kobalt.callblock.view.VerticalStackView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <dev.kobalt.callblock.view.CardView
            android:id="@+id/reviewPermissionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/primary_normal"
            app:cardCornerRadius="8dp"
            app:contentPadding="12dp">

            <dev.kobalt.callblock.view.VerticalStackView
                android:layout_width="match_parent"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_height="wrap_content">

                <dev.kobalt.callblock.view.LabelView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/overview_required_permissions_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <dev.kobalt.callblock.view.SpaceView
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />


                <dev.kobalt.callblock.view.LabelView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/overview_required_permissions_message"
                    android:textColor="@color/white" />

                <dev.kobalt.callblock.view.SpaceView
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <dev.kobalt.callblock.view.RoundRectangleView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shape_roundRect_bottomLeftRadius="8dp"
                    app:shape_roundRect_bottomRightRadius="8dp"
                    app:shape_roundRect_topLeftRadius="8dp"
                    app:shape_roundRect_topRightRadius="8dp">

                    <dev.kobalt.callblock.view.LabelButtonView
                        android:id="@+id/reviewPermissionsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/overview_required_permissions_review_action"
                        android:textAllCaps="true"
                        android:textColor="@color/primary_normal"
                        app:backgroundTintColor="@color/white"
                        android:textStyle="bold" />

                </dev.kobalt.callblock.view.RoundRectangleView>


            </dev.kobalt.callblock.view.VerticalStackView>

        </dev.kobalt.callblock.view.CardView>

        <dev.kobalt.callblock.view.LabelView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="@string/calls_title"
            android:textColor="@color/primary_normal"
            android:textSize="16sp"
            android:textStyle="bold" />

        <dev.kobalt.callblock.view.HorizontalStackView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <dev.kobalt.callblock.view.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:contentPadding="8dp">

                <dev.kobalt.callblock.view.VerticalStackView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <dev.kobalt.callblock.view.LabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calls_blocked_title"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <dev.kobalt.callblock.view.LabelView
                        android:id="@+id/blockedCallCountValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="####" />

                </dev.kobalt.callblock.view.VerticalStackView>

            </dev.kobalt.callblock.view.CardView>

            <dev.kobalt.callblock.view.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:contentPadding="8dp">

                <dev.kobalt.callblock.view.VerticalStackView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <dev.kobalt.callblock.view.LabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/calls_warned_title"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <dev.kobalt.callblock.view.LabelView
                        android:id="@+id/warnedCallCountValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="####" />

                </dev.kobalt.callblock.view.VerticalStackView>

            </dev.kobalt.callblock.view.CardView>

            <dev.kobalt.callblock.view.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:contentPadding="8dp">

                <dev.kobalt.callblock.view.VerticalStackView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <dev.kobalt.callblock.view.LabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/calls_allowed_title"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <dev.kobalt.callblock.view.LabelView
                        android:id="@+id/allowedCallCountValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="####" />

                </dev.kobalt.callblock.view.VerticalStackView>

            </dev.kobalt.callblock.view.CardView>
        </dev.kobalt.callblock.view.HorizontalStackView>

        <dev.kobalt.callblock.view.LabelView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="@string/overview_rules_title"
            android:textColor="@color/primary_normal"
            android:textSize="16sp"
            android:textStyle="bold" />

        <dev.kobalt.callblock.view.HorizontalStackView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <dev.kobalt.callblock.view.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:contentPadding="8dp">

                <dev.kobalt.callblock.view.VerticalStackView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <dev.kobalt.callblock.view.LabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/overview_rules_predefined_title"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <dev.kobalt.callblock.view.LabelView
                        android:id="@+id/predefinedRuleCountValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="####" />

                </dev.kobalt.callblock.view.VerticalStackView>

            </dev.kobalt.callblock.view.CardView>

            <dev.kobalt.callblock.view.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:contentPadding="8dp">

                <dev.kobalt.callblock.view.VerticalStackView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <dev.kobalt.callblock.view.LabelView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/overview_rules_user_title"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <dev.kobalt.callblock.view.LabelView
                        android:id="@+id/userRuleCountValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="####" />

                </dev.kobalt.callblock.view.VerticalStackView>

            </dev.kobalt.callblock.view.CardView>
        </dev.kobalt.callblock.view.HorizontalStackView>

    </dev.kobalt.callblock.view.VerticalStackView>

</dev.kobalt.callblock.view.VerticalScrollView>