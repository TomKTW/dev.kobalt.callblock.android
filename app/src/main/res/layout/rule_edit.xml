<?xml version="1.0" encoding="utf-8"?>
<dev.kobalt.callblock.view.VerticalStackView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <dev.kobalt.callblock.view.HorizontalStackView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_normal"
        android:elevation="8dp"
        android:gravity="center">

        <dev.kobalt.callblock.view.ImageButtonView
            android:id="@+id/backButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_baseline_close_24" />

        <dev.kobalt.callblock.view.LabelView
            android:id="@+id/headerTitleLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Rule entry"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <dev.kobalt.callblock.view.ImageButtonView
            android:id="@+id/deleteButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_baseline_delete_24" />

        <dev.kobalt.callblock.view.ImageButtonView
            android:id="@+id/submitButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_baseline_check_24" />

    </dev.kobalt.callblock.view.HorizontalStackView>

    <dev.kobalt.callblock.view.PhoneInputView
        android:id="@+id/numberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Phone number"
        android:inputType="phone|number" />

    <dev.kobalt.callblock.view.FrameView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/black_a50" />

    <io.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:shape_roundRect_borderColor="@color/primary_normal"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_bottomLeftRadius="8dp"
        app:shape_roundRect_bottomRightRadius="8dp"
        app:shape_roundRect_topLeftRadius="8dp"
        app:shape_roundRect_topRightRadius="8dp">

        <dev.kobalt.callblock.view.HorizontalStackView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <dev.kobalt.callblock.view.ButtonView
                android:id="@+id/ruleAllowButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:text="Allow" />

            <dev.kobalt.callblock.view.FrameView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/primary_normal" />

            <dev.kobalt.callblock.view.ButtonView
                android:id="@+id/ruleWarnButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:text="Warn" />

            <dev.kobalt.callblock.view.FrameView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/primary_normal" />

            <dev.kobalt.callblock.view.ButtonView
                android:id="@+id/ruleBlockButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:text="Block" />

        </dev.kobalt.callblock.view.HorizontalStackView>

    </io.github.florent37.shapeofview.shapes.RoundRectView>


</dev.kobalt.callblock.view.VerticalStackView>